# - Add the following to your main nginx.conf (inside the http block)
#    map $http_upgrade $connection_upgrade {
#        default upgrade;
#        '' close;
#    }
#
# - Add "cloudless.conf" to /etc/nginx

# The following will set up a default virtual server that just listens to cloudless
# soft-link this file in your /etc/nginx/sites-enabled
# Alternatively, include /etc/nginx/cloudless.conf in your own virtual server

server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    include /etc/nginx/cloudless.conf;
}